---
import Tags from './Tags.astro';
import { formatDate } from "../helpers";

export interface Props {
	title: string;
	time: string;
	tags: string[];
	slug: string;
}

const { title, time, tags, slug } = Astro.props;
const date = formatDate(time);
---

<article
	class="rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 shadow-xl transition hover:shadow-sm"
>
	<div class="rounded-[10px] bg-white p-4 !pt-20 sm:p-6">
		<time datetime={ date } class="block text-xs text-gray-500">
			{ date }
		</time>

		<a href={`/posts/${ slug }`}>
			<h3 class="mt-0.5 text-lg font-medium text-gray-900">
				{ title }
			</h3>
		</a>

		<Tags tags={ tags } />
	</div>
</article>
